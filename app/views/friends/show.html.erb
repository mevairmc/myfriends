<div class="jumbotron">
  <h1 class="display-4">
      <%= @friend.first_name %>
      <%= @friend.last_name %>
  </h1>

  <p class="lead">
    <strong>
    <%= @friend.phone %> |
    <%= @friend.email %> |
    <%= @friend.twitter %>
    </strong>
  </p>
  <br/>

  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-dark"%>
  <%= link_to 'Delete', @friend, method: :delete, class:"btn btn-danger"%>
  <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>

</div>

